{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    <h3>Tags</h3>
    <ul class="tags">
        {# iterate over each existing tag and render its only field: name #}
        {% for gelato in form.gelatos %}
            <li>{{ form_row(gelato.name) }}</li>
        {% endfor %}
    </ul>
    <input type="submit" value="Submit" />
    {{ form_end(form) }}
{% endblock %}
