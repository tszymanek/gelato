{% extends 'base.html.twig' %}

{% block body %}
    <h1>Gelato edit</h1>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
        <img class="gelato-image" src="{{ asset(image_route ~ gelato.image) }}" alt="{{ gelato.name }}" />
        {{ form_row(form.image) }}
        <input type="submit" value="Update" />
    {{ form_end(form) }}

    <ul class="record_actions">
        <li>
            <a href="{{ path('gelato') }}">
                Back to the list
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
